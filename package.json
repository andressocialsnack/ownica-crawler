{
  "name": "ownica-spiders",
  "version": "0.1.0",
  "private": true,
  "bin": {
    "katipo": "./index.js"
  },
  "license": "SEE LICENSE",
  "scripts": {
    "format": "prettier && lint",
    "lint": "eslint --fix ./",
    "prettier": "prettier '**/*.{css,gql,graphql,html,js,json,md}' 'LICENSE' --write",
    "start": "node ./index.js",
    "test": "node ./test"
  },
  "dependencies": {
    "@prisma/client": "^2.2.0",
    "ajv": "^6.12.3",
    "axios": "^0.19.2",
    "cheerio": "^1.0.0-rc.3",
    "fluent-schema": "^1.0.4",
    "puppeteer": "^5.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@prisma/cli": "^2.2.0",
    "baretest": "^2.0.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-prettier": "^3.1.3",
    "firebase-tools": "^8.4.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.9",
    "prettier": "^2.0.5",
    "sinon": "^9.0.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": [
        "lint-staged"
      ]
    }
  },
  "lint-staged": {
    "**/*.{css,gql,graphql,html,js,json,md}": [
      "prettier --write"
    ],
    "**/*.{js}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
